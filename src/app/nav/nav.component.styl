nav
  transition background-color 0.3s ease-in-out
  display flex
  z-index 10
  justify-content space-around
  align-items center
  min-height 8vh
  background-color rgba(242, 84, 91,100)
  width 100vw
  position fixed
  padding 0
  #logo
    color white
    text-transform uppercase
    letter-spacing 5px
    font-size 20px
  .nav-links
    @media screen and (max-width: 768px)
      z-index 100
      width 70vw !important
      margin 0
      padding 0
      position absolute
      right 0
      height 100vh
      top 8vh
      background-color #F2545B
      display flex
      flex-direction column
      align-items center
      justify-content center
      transform translate(100%)
      transition transform 0.5s ease-in
      li
        font-size 1.5rem
    display flex
    width 30%
    @media screen and (max-width: 1000px)
      width 40%
    justify-content space-around
    li
      list-style none
    a
      color white
      text-decoration none
      font-weight bold
  .burger
    display none
    @media screen and (max-width: 768px)
      display block
    div
      width 25px
      height 3px
      background-color  white
      margin 5px

.toggle
  div
    transition transform 0.3s ease
  .line1
    transform rotate(-45deg) translate(-5px,6px);
  .line2
    opacity 0
  .line3
    transform rotate(45deg) translate(-5px,-6px);

.nav-open
  transform translate(0) !important;

.translucent
  @media screen and (min-width : 1024px)
    background-color rgba(242, 84, 91,0)

